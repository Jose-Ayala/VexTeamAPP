<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_marker"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/markerEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/cyber_blue"
        android:textSize="12sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/markerTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textColor="@color/accent_gold"
        android:textSize="16sp"
        android:fontFamily="sans-serif-black" />

    <TextView
        android:id="@+id/markerBreakdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textColor="@color/text_medium_emphasis"
        android:textSize="11sp"
        android:fontFamily="sans-serif" />

</LinearLayout>